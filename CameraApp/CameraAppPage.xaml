<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:CameraApp"
	x:Class="CameraApp.CameraAppPage"
    Title="Camera">
    <StackLayout>
        <Button Text="Take Photo" Clicked="Handle_Take_Photo_Clicked"/>
        <Button Text="Camera Roll" Clicked="Handle_Camera_Roll_Clicked"/>
        <Button Text="Identify" Clicked="Handle_Identify_Clicked"/>
        <Image x:Name="image"/>
    </StackLayout>
</ContentPage>
